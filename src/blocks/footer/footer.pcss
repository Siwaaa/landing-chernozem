.footer {
  display: flex;
  justify-content: center;
  align-items: center;
  flex-basis: 5%;
  font-weight: 200;
  color: #898989;

  @media (--sm),(max-height: 580px) {
    font-size: 12px;
  }
  @media (--xs) {
    font-weight: 300;
    font-size: 10px;
  }

  &__social {
    margin-right: 20px;
    margin-left: 20px;

    @media (--sm), (max-height: 580px) {
      margin-right: 15px;
      margin-left: 15px;
    }

    & > a {
      &:first-child {
        margin-right: 15px;

        @media (--sm) {
          margin-right: 10px;
        }
      }
      & img {
        width: 25px;
        height: 25px;
        object-fit: contain;

        @media (--sm), (max-height: 580px) {
          width: 20px;
          height: 20px;
        }
      }
    }
  }
  &__label {
    
  }
}